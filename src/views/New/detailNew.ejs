<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <%- include('../partials/head.ejs') %>
  </head>

  <body>
    <div class="wrapper wrapper_detail_page position-relative">
      <%- include('../partials/header.ejs') %>
      <section class="detail-new pt-5 pb-5">
        <div class="container">
          <div class="box">
            <div class="box-head">
              <h2 class="text-center mb-4 fw-bold"><%= newDetail.title %></h2>
              <div class="thumb-new overflow-hidden">
                <img
                  style="
                    border-radius: 20px;
                    border-radius: 20px;
                    height: 400px;
                    object-fit: cover;
                  "
                  src="<%= newDetail.img %>"
                  alt="thumb-news"
                />
              </div>
            </div>
            <div class="box-body">
              <article><%= newDetail.content %></article>
            </div>
          </div>
        </div>
      </section>
      <%- include('../partials/footer.ejs') %>
    </div>
    <script src="/js/main.js"></script>
    <script>
      $(document).ready(function () {
        let article = document.getElementsByTagName("article")[0];
        let articleString = article.innerText;
        const parser = new DOMParser();
        let articleHtml = parser.parseFromString(articleString, "text/html");

        article.innerHTML = articleHtml.body.innerHTML;
      });
    </script>
  </body>
</html>
